@model GuiaApp.Model.Menu

@{
    ViewBag.Title = "Deletar menu";
}

<ol class="breadcrumb breadcrumb-border">
    <li>@Html.ActionLink("Menu", "Index")</li>
    <li class="active">Deletar usuário</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">Dados</div>

    <div class=" panel-padding2">
        <div class="alert alert-warning">
            Tem certeza de que deseja excluir este registro?
        </div>


        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Active)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Active)
            </dd>

        </dl>

    </div>
    <div class="panel-footer">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <a href="@Url.Action("Index")" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Cancelar</a>

            <button type="submit" class="btn btn-danger">
                <span class="glyphicon glyphicon-ok"></span> Deletar
            </button>
        }
    </div>
</div>

